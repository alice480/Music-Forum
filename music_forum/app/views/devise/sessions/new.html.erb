<h1 class="mb-8 text-5xl text-center">Log in</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :login %><br />
    <%= f.text_field :login, class: "block border border-grey-light w-full p-3 rounded mb-4", autofocus: true%>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, class: "block border border-grey-light w-full p-3 rounded mb-4", autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Log in", class: "w-full text-center py-3 rounded bg-indigo-600 text-white hover:bg-green-dark focus:outline-none"%>
  </div>
<% end %>

