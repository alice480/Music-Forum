<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-outline mb-4">
      <%= f.label :login, class: "form-label", for: "form3Example97" %>
      <%= f.text_field :login, autofocus: true, autocomplete: "login", id: "login", class: "form-control form-control-lg" %>
  </div>

  <div class="field">
      <%= f.label t('password'), class: "form-label", for: "form3Example97" %>
      <%= f.password_field :password, autocomplete: "new-password", id: "password", class: "form-control form-control-lg" %>
  </div>

  <div class="d-flex justify-content-end pt-3">
    <%= f.submit "Log in", id: 'log_in', class: "btn btn-warning btn-lg ms-2"%>
  </div>

  <div class="d-flex justify-content-end pt-3">
    Нет аккаунта?
  </div>

  <div class="d-flex justify-content-end pt-3">
    <%= link_to 'Зарегистрироваться', 'sign_up'%>
  </div>

  <div class="d-flex justify-content-end pt-3">
    <%= link_to "На главную", '/general/home_page' %>
  </div>
  
<% end %>