<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        

        <%= render "devise/shared/error_messages", resource: resource %>

            <div class="row">

                  <div class="col-md-6 mb-4">
                    <div class="form-outline">

                      <%= f.label :'Имя', class: "form-label" %>
                      <%= f.text_field :name, autofocus: true, id: "form3Example1n", class: "form-control form-control-lg" %>

                    </div>
                  </div>

                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                        <%= f.label :'Фамилия', class: "form-label" %>
                      <%= f.text_field :surname, autofocus: true, id: "form3Example1n", class: "form-control form-control-lg" %>
                    </div>
                  </div>

            </div>

                <div class="form-outline mb-4">
                  <%= f.label :'Логин', class: "form-label", for: "form3Example97" %>
                  <%= f.text_field :login, autofocus: true, autocomplete: "email", id: "form3Example97", class: "form-control form-control-lg" %>
                </div>

                <div class="form-outline mb-4">
                  <%= f.label :email, class: "form-label", for: "form3Example97" %>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "form3Example97", class: "form-control form-control-lg" %>
                </div>

                <div class="field">
                  <%= f.label :'Пароль', class: "form-label", for: "form3Example97" %>
                    <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> символов минимум)</em>
                    <% end %><br />
                    <%= f.password_field :password, autocomplete: "new-password", id: "form3Example97", class: "form-control form-control-lg" %>
                </div>

                <div class="field">
                  <%= f.label :'Подтверждение пароля', class: "form-label", for: "form3Example97" %>
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", id: "form3Example97", class: "form-control form-control-lg" %>
                </div>


                <div class="d-flex justify-content-end pt-3">
                  <%= f.submit "Зарегистрироваться", class: "btn btn-warning btn-lg ms-2"%>
                </div>

                <div class="d-flex justify-content-end pt-3">
                  Уже есть аккаунт?
                </div>

                <div class="d-flex justify-content-end pt-3">
                  <%= link_to 'Войти', 'sign_in'%>
                </div>

                <div class="d-flex justify-content-end pt-3">
                  <%= link_to "На главную", '/general/home_page' %>
                </div>
<% end %>