<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <p class="notice" id="errors"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        

        <%= render "devise/shared/error_messages", resource: resource %>

            <div class="row">

                  <div class="col-md-6 mb-4">
                    <div class="form-outline">

                      <%= f.label :name, class: "form-label" %>
                      <%= f.text_field :name, autofocus: true, id: "name", class: "form-control form-control-lg" %>

                    </div>
                  </div>

                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                        <%= f.label :surname, class: "form-label" %>
                      <%= f.text_field :surname, autofocus: true, id: "surname", class: "form-control form-control-lg" %>
                    </div>
                  </div>

            </div>

                <div class="form-outline mb-4">
                  <%= f.label :login, class: "form-label", for: "form3Example97" %>
                  <%= f.text_field :login, autofocus: true, autocomplete: "email", id: "login", class: "form-control form-control-lg" %>
                </div>

                <div class="form-outline mb-4">
                  <%= f.label :email, class: "form-label", for: "form3Example97" %>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "email", class: "form-control form-control-lg" %>
                </div>

                <div class="field">
                  <%= f.label :password, class: "form-label", for: "form3Example97" %>
                    <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length%><%= t'symbols minimum'%>)</em>
                    <% end %><br />
                    <%= f.password_field :password, autocomplete: "new-password", id: "password", class: "form-control form-control-lg" %>
                </div>

                <div class="field">
                  <%= f.label t('password_confirmation'), class: "form-label", for: "form3Example97" %>
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", id: "password_confirmation", class: "form-control form-control-lg" %>
                </div>


                <div class="d-flex justify-content-end pt-3">
                  <%= f.submit t('sign up'), class: "btn btn-warning btn-lg ms-2", id: 'sign'%>
                </div>

                <div class="d-flex justify-content-end pt-3">
                  <%= t'already have an account'%>
                </div>

                <div class="d-flex justify-content-end pt-3">
                  <%= link_to t('sign_in'), 'sign_in', id: "enter" %>
                </div>

                <div class="d-flex justify-content-end pt-3">
                  <%= link_to "На главную", '/general/home_page', id: "home" %>
                </div>
<% end %>