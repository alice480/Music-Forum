<%= simple_form_for :user, :url => { :action => "create" } do |f| %>

  <div class="form-inputs">
    <%= f.input :login %>
    <%= f.input :email%>
    <%= f.input :name %>
    <%= f.input :surname %>
    <%= f.input :password %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
