<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <% if current_user.avatar.attached? %>
      <%= image_tag(current_user.avatar.variant(resize: "200x200!").processed) %>
    <% else %>
      <%= image_tag("/default_profile.jpeg") %>
    <% end %>
  </div>


  <div class="field">
    <%= f.file_field :avatar %>
  </div>

  <div class="form-outline mb-4">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Введите пароль для подтверждения: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(пропустите поле, если не хотите менять пароль)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %>символов минимум</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(Введите пароль для внесения изменений)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>
<%= link_to "Back", :back %>




