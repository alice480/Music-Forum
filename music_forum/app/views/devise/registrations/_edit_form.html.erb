
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <p class="alert"><%= alert %></p>

    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="d-flex justify-content-end">
      <% if current_user.avatar.attached? %>
        <%= image_tag(current_user.avatar.variant(resize: "200x200!").processed) %>
      <% else %>
        <%= image_tag("/default_profile.jpeg") %>
      <% end %>
    </div>

    <div class="d-flex justify-content-end pt-3">
      <div class="field">
        <%= f.file_field :avatar %>
      </div>
    </div>

    <div class="form-outline mb-4">
      <%= f.label :email, class: "form-label", for: "form3Example97" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "email", class: "form-control form-control-lg" %>
    </div>


    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div><%= t'input password to confirm' %> <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-outline mb-4">
      <%= f.label :password, class: "form-label", for: "form3Example97" %> <i><%= t 'pass if dont want to change'%></i><br />
      <%= f.password_field :password, autocomplete: "password", id: "user_password", class: "form-control form-control-lg" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %><%= t'symbols minimum'%></em>
      <% end %>
    </div>

    <div class="form-outline mb-4">
      <%= f.label t('password_confirmation'), class: "form-label", for: "form3Example97" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", id: "password_confirmation", class: "form-control form-control-lg" %>
    </div>

    <div class="form-outline mb-4">
      <%= f.label t('current password'), class: "form-label", for: "form3Example97" %> <i><%= t'input password to confirm'%></i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", id: "current_password", class: "form-control form-control-lg" %>
    </div>

    <div class="d-flex justify-content-end pt-3">
      <%= f.submit t('update'), id: "update", class: "btn btn-warning btn-lg ms-2"%>
    </div>

    <div class="d-flex justify-content-end pt-3">
      <%= link_to t('back'), '/' %>
    </div>
<% end %>





