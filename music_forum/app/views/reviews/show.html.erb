<% @review = Review.find_by(id: params[:id]) %>
<section >
  <div class="container my-5 py-5">
    <div class="row d-flex justify-content-center">
      <div class="col-md-12 col-lg-10 col-xl-8">
        <div class="card">
          <div class="card-body">
            <div class="d-flex flex-start align-items-center">
              
              <%= image_tag(User.find_by(id: @review.user_id).avatar_thumbnail,
                    class: "rounded-circle shadow-1-strong me-3",
                    alt: "avatar", 
                    width: "60",
                    height: "60") %>

              <div>
                <h6 class="fw-bold text-primary mb-1"><%= User.find_by(id: @review.user_id).name %></h6>
                <p class="text-muted small mb-0">
                  <%= @review.created_at %>
                </p>
              </div>
            </div>

            <p class="mt-3 mb-4 pb-2">
              <%= @review.text %>
            </p>

          </div>

          <div class="row g-1">
              <%= render 'comments/all', review: @review %>
          </div>

          <div class="card-footer py-3 border-0" style="background-color: #f8f9fa;">
                
                <% if current_user.nil? %>
                  <p><%= t 'log in to comment' %></p>
                  <a href =  <%= new_user_session_path %> class="link-primary"><span class="fs-5"><%= t 'entry' %></span></a>
                <% else %>
                  <%= render 'comments/form' %>
                <% end %>

            <div class="d-flex justify-content-end pt-3">
                  <%= link_to "На главную", '/general/home_page' %>
            </div>
          
          </div>
        </div>
      </div>
    </div>
  </div>
</section>



  
