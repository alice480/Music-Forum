
    <% @comments = Comment.where(review_id: @review[:id]).as_json %>
    <% @comments.each do |comment| %>
        <div class="col-9">
        </div>
        <div class="col">
            <div class="row">

                  <div class="col">
                      <%= image_tag(User.find_by(id: comment["users_id"]).avatar_thumbnail,
                                        class: "rounded-circle shadow-1-strong me-3",
                                        alt: "avatar", 
                                        width: "30",
                                        height: "30") %>
                      <div class="col">
                      <%= User.find_by(id: comment["users_id"]).name %> <br>
                      <%= comment["created_at"][0..9] %> <br>
                      <span class="border border-primary">
                        <%= comment["text"] %>
                      </span> 
                      <p></p>
                  </div>
              </div>
      </div>
    <% end %>
